datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  body     String?
  image    String?
  price    Float?
  completed   Boolean  @default(false)
  createdAd DateTime  @default(now())
}


